<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.fha.bwi50101.create_edit.CreateEditActivity">

    <include
        android:id="@+id/create_edit_toolbar"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <android.support.design.widget.TabLayout
        android:id="@+id/create_edit_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_edit_tab_layout"
        android:layout_gravity="top" />

    <android.support.v4.view.ViewPager
        android:id="@+id/create_edit_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/create_edit_view_pager" />

</RelativeLayout>
